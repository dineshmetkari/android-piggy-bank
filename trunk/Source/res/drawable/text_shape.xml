<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
	<item
		android:top="4dp"
		android:right="4dp"
		android:bottom="4dp"
		android:left="4dp">
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<stroke 
				android:width="0dp" 
				android:color="#FFFFFF"/>
			<corners android:radius="7dp" />
			<gradient 
				android:angle="270"
				android:type="linear"
				android:startColor="#FFB0CAD9"
				android:centerColor="#AFB0CAD9"
				android:endColor="#AFB0CAD9"/>
		</shape>
	</item>
	<item
		android:top="4dp"
		android:right="4dp"
		android:bottom="4dp"
		android:left="4dp">
		<shape
  			xmlns:android="http://schemas.android.com/apk/res/android"
    		android:shape="rectangle">
			<solid android:color="#00000000" />
			<stroke 
				android:width="1dp" 
				android:color="#AF90B0FF"/>
			<padding 
				android:left="0dp" 
				android:top="0dp" 
				android:right="0dp"
				android:bottom="0dp"/>
			<corners android:radius="7dp" />
		</shape>
	</item> 
</layer-list>
