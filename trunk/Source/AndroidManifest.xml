<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.hangman.piggybank"
      android:versionCode="1"
      android:versionName="0.4.2">
    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>

    <application 
    	android:icon="@drawable/icon" 
    	android:label="@string/app_name"
    	android:theme="@android:style/Theme.NoTitleBar" 
    	android:name=".PiggyBankApplication">
        <activity 
        	android:name=".ViewControllers.PiggyBankActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewControllers.ChangeAmountActivity"/>
        <activity android:name=".ViewControllers.AddStuffActivity"/>
        <activity android:name=".ViewControllers.ChangeStuffActivity"/>
        <activity android:name=".ViewControllers.AboutActivity" android:theme="@style/Theme.Translucent"/>
	</application>
</manifest>